begin
  inherited;
 if EdPath.Text = '' then
  begin
   MessageDlg('ÅÊ‘Â Õ«ÊÌ  ’«ÊÌ— œ«‰‘ÃÊÌ«‰ —« «‰ Œ«» ‰„«ÌÌœ',   mtConfirmation,[mbOK],0);
